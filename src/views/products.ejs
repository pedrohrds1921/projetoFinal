<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <title>Listagem de itens</title>
</head>

<body>


  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link active" href="/views/products">Listagem</a>
          <% allCategories.map(item=> { %>
          <a class="nav-link" href="/views/<%= item.name %>"><%= item.name %></a>
          <% }); %>
          <a class="nav-link" href="/views/myProducts">Meus Produtos</a>
          <a class="nav-link" href="/views/createProducts">Cadastrar Produto</a>
        </div>
      </div>
    </div>
  </nav>

  <div class="container text-center">
    <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3">
      <% allProducts.map(item=> { %>
        <div class="card">
          <div class="view overlay">
            <img src="<%= item.PlaceHolderImage%>" class="card-img-top pt-3" alt="<%= item.name %>">
          </div>
          <div class="card-body ">
            <h4 class="card-title"><%= item.name %></h4>
            <p class="card-text"><%= item.description %></p>
            <p class="card-text">Categoria: <%= item.Categorie %></p>
            <p class="card-text">R$ <%= item.price %></p>
            <p class="card-text">Estoque: <%= item.stock %></p>
            <div class="d-flex d-flex justify-content-around">
              <form action="/views/products/updade/<%= item.id %>" method="get">
                <input type="hidden" name="id" value="<%= item.id %>">
                <button type="submit" class="btn ms-2 rounded-0 btn-primary mt-2">Editar</button>
              </form>
              <form action="/products/<%= item.id %>?_method=DELETE" method="post">
                <input type="hidden" name="id" value="<%= item.id%>">
                <button type="submit" class="btn rounded-0 btn-danger mt-2">Excluir</button>
              </form>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </div>

</body>

</html>